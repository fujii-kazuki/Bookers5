<div class="container px-5 px-sm-0">
  <h2>
    <% if @range == 'User' %>
      Users search for "<%= @word %>"
    <% else %>
      Books search for "<%= @word %>"
    <% end %>
  </h2>

  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% if @range == 'User' %>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image , size:'80x80'%></td>
              <% end %>
            <td>
              <%= link_to user.name, user_path(user) %>
            </td>
            <td>
              <%= user.introduction %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image , size:'80x80'%></td>
              <% end %>
            <td>
              <%= link_to book.title, book_path(book) %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
